#!/bin/bash

GREEN='\033[0;32m'
NC='\033[0m'

echo -e "${GREEN}Starting Shadowsocks auto-connect...${NC}"

# Install shadowsocks-libev if not installed
if ! command -v ss-local &> /dev/null; then
    echo -e "${GREEN}Installing shadowsocks-libev...${NC}"
    apt update && apt install -y shadowsocks-libev
fi

# Servers list
SERVERS=(
    "sto1.g.edgeservers.org 36632 nxS1a7JNlICbsN8Q4EKL5t"
    "sto2.g.edgeservers.org 15128 70Xwg0SbHSL8CuCkiLuGhO"
    "sto3.g.edgeservers.org 32448 WVU27LquAMOeXmYeStI897"
    "sto4.g.edgeservers.org 63418 PI3ncxF2GPuPiB1l5gitcO"
)

METHOD="chacha20-ietf-poly1305"

# Ping test function
get_ping() {
    ping -c 1 -W 1 $1 | grep time= | awk -F'time=' '{print $2}' | awk '{print $1}'
}

# Select fastest server
BEST_PING=9999
for entry in "${SERVERS[@]}"; do
    set -- $entry
    SERVER=$1
    PORT=$2
    PASSWORD=$3
    PING=$(get_ping $SERVER)
    echo -e "${GREEN}Ping $PING ms from $SERVER${NC}"
    if [[ ! -z "$PING" ]] && (( $(echo "$PING < $BEST_PING" | bc -l) )); then
        BEST_PING=$PING
        BEST_SERVER=$SERVER
        BEST_PORT=$PORT
        BEST_PASSWORD=$PASSWORD
    fi
done

if [ -n "$BEST_SERVER" ]; then
    echo -e "${GREEN}Connecting to the fastest server: $BEST_SERVER${NC}"
else
    echo "No available servers. Exiting..."
    exit 1
fi

# Kill previous ss-local
pkill ss-local

# Run ss-local with the fastest server
nohup ss-local -s "$BEST_SERVER" -p "$BEST_PORT" -k "$BEST_PASSWORD" -m "$METHOD" -l 1080 &

echo -e "${GREEN}Shadowsocks connected on 127.0.0.1:1080${NC}"